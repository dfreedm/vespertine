{
  "compilerOptions": {
    "target": "es2017",
    "module": "AMD",
    "sourceMap": false,
    "types": ["chrome-types"],
    "typeRoots": ["node_modules"],
    "lib": ["es2017", "esnext.asynciterable", "dom"],
    "outFile": "vespertine.js",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true
  },
  "include": ["src/*.ts"]
}