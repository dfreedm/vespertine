{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "sourceMap": false,
    "types": ["@types/chrome"],
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "esnext.asynciterable", "dom"],
    "outDir": "dist",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true
  },
  "include": ["src/**/*.ts"]
}